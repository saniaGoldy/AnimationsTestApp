<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/val_anim_button"
        style="@style/FullWrap.AnimatedButton"
        android:text="@string/value_animator"
        app:layout_constraintBottom_toTopOf="@+id/obj_anim_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/obj_anim_button"
        style="@style/FullWrap.AnimatedButton"
        android:text="@string/object_animator"
        app:layout_constraintBottom_toTopOf="@+id/view_prop_anim_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/val_anim_button" />

    <Button
        android:id="@+id/view_prop_anim_button"
        style="@style/FullWrap.AnimatedButton"
        android:text="@string/view_property_animator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/obj_anim_button" />
</androidx.constraintlayout.widget.ConstraintLayout>